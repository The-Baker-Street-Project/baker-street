{
  "permissions": {
    "allow": [
      "Bash(*)",
      "WebSearch",
      "WebFetch(domain:api.github.com)",
      "WebFetch(domain:github.com)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash(git commit:*)",
        "hooks": [
          {
            "type": "command",
            "command": "pnpm -r build --reporter=silent 2>&1 | tail -30",
            "timeout": 60000
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash(git commit:*)",
        "hooks": [
          {
            "type": "prompt",
            "prompt": "A commit was just made. Review the committed changes. If they introduced new patterns, commands, architecture changes, or gotchas that should be documented in CLAUDE.md, update it now. Otherwise do nothing."
          }
        ]
      }
    ]
  }
}